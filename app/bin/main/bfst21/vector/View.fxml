<?xml version="1.0" encoding="UTF-8"?>

<?import bfst21.vector.MapCanvas?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.Scene?>
<?import java.lang.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<Scene xmlns="http://javafx.com/javafx"
       xmlns:fx="http://javafx.com/fxml"
       fx:controller="bfst21.vector.Controller"
       fx:id="scene"
>
    <root>
        <BorderPane prefHeight="480.0" prefWidth="640.0">
            <top>
                <MenuBar id="menuBar" focusTraversable="true" >  
                    <menus>  
                        <Menu text="Public transport">  
                            <items>
                                <MenuItem text="All public transport" onAction="#showAll"/>  
                                <MenuItem text="Bus" onAction="#showOnlyBus"/>  
                                <MenuItem text="Ferry" onAction="#showOnlyFerries"/>  
                                <MenuItem text="Trains" onAction="#showOnlyTrains"/>                                  
                            </items>  
                        </Menu>
                    </menus>  
                </MenuBar> 
            </top>
            <center>
                <MapCanvas fx:id="canvas"
                           width="${scene.width}"
                           height="${scene.height}"
                           onScroll="#onScroll"
                           onMousePressed="#onMousePressed"
                           onMouseDragged="#onMouseDragged"
                />
            </center>
        </BorderPane>
    </root>
</Scene>
