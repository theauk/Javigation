<?xml version="1.0" encoding="UTF-8"?>

<?import bfst21.view.BasicDrawing?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.Scene?>
<Scene xmlns="http://javafx.com/javafx"
       xmlns:fx="http://javafx.com/fxml"
       fx:controller="bfst21.ControllerForDrawing"
       fx:id="scene"
>
    <root>
        <BorderPane prefHeight="480.0" prefWidth="640.0">
            <center>
                <BasicDrawing fx:id="drawing"
                           width="${scene.width}"
                           height="${scene.height}"
                           onScroll="#onScroll"
                           onMousePressed="#onMousePressed"
                           onMouseDragged="#onMouseDragged"
                />
            </center>
        </BorderPane>
    </root>
</Scene>
